<section>
<header>
  <div id="donde_estoy">Usuarios</div>
</header>

<article>
<table>
  <tr>
    <th>Login</th>
    <th>Name</th>
    <th>Email</th>
    <th></th>
  </tr>

<% for (var i in users) { %>
  <tr>
     <td> <%= users[i].login %>  </td>
     <td> <%= users[i].name %>  </td>
     <td> <%= users[i].email %> </td>
     <td>
       <form method='post' action='/users/<%= users[i].id %>'>
          <input type='hidden' name='_method' value='delete'>
          <a href="/users/<%= users[i].id %>"> Ver </a>

          <% if (session.user && session.user.id == users[i].id) {%>
             <a href="/users/<%= users[i].id %>/edit"> Editar </a>
          <% } %>

         <% if (false) { %>
            <a href="" onclick="submit();return false"> Borrar </a>  
         <% } %>

       </form>
     </td>
  </tr>
<%  }; %>
</table>
</article>

<footer>
  <nav> <a href="/users/new"> Crear nuevo Usuario </a> </nav>
</footer>
<section>


